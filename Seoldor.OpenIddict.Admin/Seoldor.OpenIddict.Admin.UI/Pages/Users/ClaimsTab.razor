@using Seoldor.OpenIddict.Admin.Shared.Dtos.Users

@if (user?.Claims?.Any() != true)
{
    <p>Nenhuma claim atribuída.</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in user.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter] public UserDetailsDto user { get; set; }
}
