@page "/users/create"
@using Microsoft.AspNetCore.Components.Forms
@using Seoldor.OpenIddict.Admin.Shared.Dtos.Users
@using Seoldor.OpenIddict.Admin.UI.Services
@inject IUserService UserService
@inject NavigationManager NavigationManager

<h3>Criar Usuário</h3>
<hr />

@if (isSaving)
{
    <p>Salvando usuário...</p>
}
else
{
    <EditForm Model="@model" OnValidSubmit="@CreateUser">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Nome</label>
            <InputText class="form-control" @bind-Value="model.FullName" />
        </div>

        <div class="mb-3">
            <label>Email</label>
            <InputText class="form-control" @bind-Value="model.Email" />
        </div>

        <div class="mb-3">
            <label>Usuário</label>
            <InputText class="form-control" @bind-Value="model.UserName" />
        </div>

        <div class="mb-3">
            <label>Senha</label>
            <InputText type="password" class="form-control" @bind-Value="model.Password" />
        </div>

        <button type="submit" class="btn btn-primary">Criar</button>
        <button type="button" class="btn btn-secondary mx-2" @onclick="GoBack">Cancelar</button>
    </EditForm>
}

@code {
    private CreateUserDto model = new CreateUserDto();
    private bool isSaving = false;

    private async Task CreateUser()
    {
        isSaving = true;

        try
        {
            var ok = await UserService.CreateAsync(model);

            if (ok)
                NavigationManager.NavigateTo("/users");
            else
                isSaving = false; // manter formulário visível se houver falha
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao criar usuário: {ex.Message}");
            isSaving = false;
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/users");
    }
}
